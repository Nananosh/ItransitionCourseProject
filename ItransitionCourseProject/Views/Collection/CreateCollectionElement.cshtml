@model ItransitionCourseProject.ViewModels.CollectionElementViewModel

<h2>Create Collection</h2>
<form class="form-group" method="post" asp-controller="Collection" asp-action="CreateCollectionElement">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="CollectionId" value="@ViewBag.Collection.Id">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" placeholder="Enter Title">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" placeholder="Enter Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image"></label>
            <div class="container p-y-1">
                <div class="row m-b-1">
                    <div class="col-sm-6 offset-sm-3">
                        <div class="form-group inputDnD">
                            <label class="sr-only" asp-for="Image"></label>
                            <input type="file" class="form-control-file text-primary font-weight-bold" id="file-upload" accept="image/*" data-title="Drag and drop a file">
                            <input type="hidden" id="file-upload-url" asp-for="Image"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" id="tags" asp-for="Tags"/>
        </div>
        <div id="customfields">

            @for (var customField = 0; customField < ViewBag.Collection.CustomFieldsTemplates.Count; customField++)
            {
                <input type="hidden" asp-for='CustomFields[customField].CustomFieldsTemplates.Id' value="@ViewBag.Collection.CustomFieldsTemplates[customField].Id">
                <span>@ViewBag.Collection.CustomFieldsTemplates[customField].Name</span>
                <input class="form-control" name="CustomFields[@customField].Value" placeholder="@ViewBag.Collection.CustomFieldsTemplates[customField].Name">
            }

        </div>
        <div>
            <button type="submit" class="btn btn-primary" onclick="getValueDiv()">Create</button>
        </div>
    </form>

    <div class="card">
        <img src="" id="img-preview" value=""/>
    </div>
    <div id="example" class="form-control"></div>
