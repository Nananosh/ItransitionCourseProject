@{
    ViewData["Title"] = "Home Page";
}

<div id="home">
    <div class="container-fluid mr-2 ml-1 m-auto">
        <div class="col-xl">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="max-height:400px;">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" style="max-height:400px;">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://res.cloudinary.com/nananosh/image/upload/v1629144757/SiteImage%20/for_nikita2_rehlnq.png" alt="Первый слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://res.cloudinary.com/nananosh/image/upload/v1629144757/SiteImage%20/for_nikita1_nutkt1.png" alt="Второй слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://res.cloudinary.com/nananosh/image/upload/v1629149076/SiteImage%20/for_nikita_remaster_pekaif.png" alt="Третий слайд">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="container bg-white rounded mt-3 shadow">
        <div class="row pt-3">
                <div class="four col-md-3">
                    <div class="counter-box colored shadow-sm rounded"> <i class="fa fa-thumbs-o-up"></i> <span class="counter">@ViewBag.NumberLike</span>
                        <p>Likes</p>
                    </div>
                </div>
                <div class="four col-md-3">
                    <div class="counter-box shadow-sm rounded"> <i class="fa fa-group"></i> <span class="counter">@ViewBag.NumberCollections</span>
                        <p>Collections</p>
                    </div>
                </div>
                <div class="four col-md-3">
                    <div class="counter-box shadow-sm rounded"> <i class="fa fa-shopping-cart"></i> <span class="counter">@ViewBag.NubmerUsers</span>
                        <p>Users</p>
                    </div>
                </div>
                <div class="four col-md-3">
                    <div class="counter-box shadow-sm rounded"> <i class="fa fa-user"></i> <span class="counter">@ViewBag.NumberComments</span>
                        <p>Comments</p>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-12">
                <h1>Top Collections</h1>
            </div>
        </div>
        <div class="row">
            @for (int i = 0; i < ViewBag.Collections.Count; i++)
            {
                <div class="col-lg-4 d-flex justify-content-center">
                    <div class="card bg-secondary bg-white rounded mb-4" style="width: 18rem;">
                        <a href="@ViewBag.Collections[i].Image" data-toggle="lightbox" data-title="@ViewBag.Collections[i].Title">
                            <img src="@ViewBag.Collections[i].Image" class="card-img-top shadow-sm bg-white rounded image-popup-no-margins img-card" alt="...">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                @ViewBag.Collections[i].Title
                                <span class="badge badge-info ml-2">@ViewBag.Collections[i].CollectionTheme.Theme</span>
                            </h5>
                            <p class="card-text cropped-text">@ViewBag.Collections[i].Description</p>
                            <a asp-action="Collection" asp-controller="Collection" asp-route-id="@ViewBag.Collections[i].Id" class="btn btn-primary">Watch Collection</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1>Last added collection items</h1>
            </div>
        </div>
        <div class="row">
            @for (int i = 0; i < ViewBag.LastAddedCollectionElement.Count; i++)
            {
                <div class="col-lg-4 d-flex justify-content-center">
                    <div class="card bg-secondary bg-white rounded mb-4" style="width: 18rem;">
                        <a href="@ViewBag.LastAddedCollectionElement[i].Image" data-toggle="lightbox" data-title="@ViewBag.LastAddedCollectionElement[i].Title">
                            <img src="@ViewBag.LastAddedCollectionElement[i].Image" class="card-img-top shadow-sm bg-white rounded image-popup-no-margins img-card" alt="...">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                @ViewBag.Collections[i].Title
                            </h5>
                            <p class="card-text cropped-text">@ViewBag.LastAddedCollectionElement[i].Description</p>
                            <a asp-action="CollectionElement" asp-controller="Collection" asp-route-id="@ViewBag.LastAddedCollectionElement[i].Id" class="btn btn-primary">Watch Element</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
$(document).on('click', '[data-toggle="lightbox"]', function(event) {
    event.preventDefault();
    $(this).ekkoLightbox();
});
$(document).ready(function() {

$('.counter').each(function () {
$(this).prop('Counter',0).animate({
Counter: $(this).text()
}, {
duration: 4000,
easing: 'swing',
step: function (now) {
$(this).text(Math.ceil(now));
}
});
});

});
</script>